{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "lintOptions": {
    "typeCheck": true
  },
  "linterOptions": {
    "exclude": ["src/lib/api/*"]
  },
  "rules": {
    "no-bitwise": false,
    "no-var-requires": false,
    "prefer-for-of": false,
    "forin": false,
    "object-literal-sort-keys": false,
    "no-eval": false,
    "no-string-literal": false,
    "no-namespace": false
  }
}